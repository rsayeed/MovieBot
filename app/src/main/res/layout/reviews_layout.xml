<?xml version="1.0" encoding="utf-8"?>
<!--
    This linear layout contains a single item to hold the trailer link for a movie
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reviewsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/detail_touch_selector">

    <!--
        This horizontal linear layout displays the description and priority of a task
        in a single horizontal line
    -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/review_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_comment_black_24dp"
            tools:src="@drawable/ic_comment_black_24dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/reviewAuthorLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:typeface="normal"
            tools:text="Author:"
            android:text="@string/reviewAuthorLabel"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/reviewAuthorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:typeface="normal"
            tools:text="Android Dev"
            android:fontFamily="sans-serif" />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/reviewCommentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:typeface="normal"
            tools:text="Well choreographed action set-pieces. Good effects. Dinosaurs are magnificent."
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- A gray divider line at the bottom of each task -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

</LinearLayout>


